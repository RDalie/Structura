{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": [
    "index.ts",
    "config/**/*.ts",
    "imports/**/*.ts",
    "types/**/*.ts",
    "utils/**/*.ts"
  ],
  "exclude": ["dist", "node_modules"]
}


generator client {
  provider = "prisma-client-js"
  // Emit the generated client into backend/generated/prisma
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
}

model AstNode {
  id            String   @id @db.Uuid
  filePath      String
  type          String

  parentId      String?  @db.Uuid
  parent        AstNode? @relation("AstNodeToParent", fields: [parentId], references: [id], onDelete: Cascade)
  children      AstNode[] @relation("AstNodeToParent")

  snapshotId    String   @db.Uuid
  snapshot      Snapshot @relation(fields: [snapshotId], references: [id], onDelete: Cascade)

  data          Json
  location      Json?
  originalType  String?

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([type])
  @@index([filePath])
  @@index([parentId])
}

model GraphEdge {
  id         String   @id @db.Uuid

  fromId     String   @db.Uuid
  toId       String   @db.Uuid

  kind       String   // CALL, IMPORT, MEMBER_ACCESS, ASSIGNMENT, ...

  filePath   String

  snapshotId String   @db.Uuid
  snapshot   Snapshot @relation(fields: [snapshotId], references: [id], onDelete: Cascade)

  version    Int      // schema / extraction compatibility version

  createdAt  DateTime @default(now())

  @@index([fromId])
  @@index([toId])
  @@index([kind])
  @@index([filePath])
  @@index([snapshotId])
}

model Snapshot {
  id              String   @id @default(uuid()) @db.Uuid
  snapshotVersion String
  rootPath        String
  createdAt       DateTime @default(now())

  astNodes AstNode[]
  graphEdges GraphEdge[]

  @@index([snapshotVersion])
}
